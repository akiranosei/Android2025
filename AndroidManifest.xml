<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.studentmind"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Интернет для Google AI -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Для уведомлений на Android 13+ может понадобиться -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".StudentMindApp"
        android:allowBackup="true"
        android:label="StudentMind"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentMind">
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Приёмник для уведомлений -->
        <receiver
            android:name=".notifications.ReminderReceiver"
            android:exported="false" />
    </application>
</manifest>
